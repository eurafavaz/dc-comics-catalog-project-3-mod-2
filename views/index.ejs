<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>DC Comics Characters</title>
</head>
<body>

    <header>
	<h1>DC Comics Characters</h1>
    </header>

    <main>
        <section id="cards">

            <% characters.forEach((character) => { %>
                <div class="card">
                    <img src="<%= character.image %>" alt="">
                    <h2><%= character.name %></h2>
                    <p class="alias"><%= character.alias %></p>
                    <p><%= character.powers %></p>
                    <p class="description"><%= character.description %></p>
                </div>
            <% }) %>
        
        </section>

        <section id="register">

            <h2>Register a new super hero!</h2>

            <form action="/add" method="POST">

                <label for="name">Name:</label>
                <input type="text" id="name" name="name">

                <label for="alias">Alias:</label>
                <input type="text" id="alias" name="alias">

                <label for="powers">Powers:</label>
                <input type="text" id="powers" name="powers">

                <label for="description">Description:</label>
                <input type="text" id="description" name="description">

                <label for="image">Image link:</label>
                <input type="url" id="image" name="image">

                <button id="btnSend" type="submit">Submit now</button>
            
            </form>


        </section>

    </main>

</body>
</html>